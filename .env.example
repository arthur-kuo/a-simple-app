# Database configuration
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_ROOT_PASSWORD=
DB_PORT=3306
DB_HOST=127.0.0.1
DB_DATABASE=
DB_DOCKER_PORT=3306

# Application URL
APP_URL=https://your-app-url.com

# Production Database URL (use for deployment)
DATABASE_URL=postgres://username:password@hostname:port/databasename?sslmode=require

# SendGrid email service
SENDGRID_API_KEY=
SENDER_EMAIL=your-email@example.com
TEMPLATE_ID=template_id_from_sendgrid

# Node environment
NODE_ENV=production
NODE_LOCAL_PORT=3000
NODE_DOCKER_PORT=3000

# Session management
SESSION_SECRET=your-session-secret

# JWT authentication
JWT_SECRET=your_long_random_jwt_secret_key
VERIFICATION_TOKEN_EXPIRY=24h

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GGcallbackURL=https://your-app-url.com/api/auth/google/callback
